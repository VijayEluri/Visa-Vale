<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<ImageView android:id="@+id/img_1" android:src="@drawable/logo"
		android:layout_width="200dip" android:layout_height="200dip"
		android:layout_weight="0" android:layout_gravity="center"
		android:scaleType="fitXY" />

<ScrollView android:id="@+id/ScrollView01"
 android:layout_width="fill_parent"
 android:layout_height="150px">

	<TextView android:id="@+id/view" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:typeface="monospace" ></TextView>
</ScrollView>
		
	<TextView android:id="@+id/viewSaldo"
		android:layout_height="wrap_content"  android:layout_width="fill_parent" android:gravity="center"></TextView>

</LinearLayout>